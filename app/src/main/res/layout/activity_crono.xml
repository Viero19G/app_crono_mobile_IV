<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@color/white">

    <ScrollView
        android:id="@+id/scrowl"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <EditText
                android:id="@+id/nomeAtv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edittext_background"
                android:hint="Nome da Atividade"
                android:padding="10dp"
                android:textSize="16sp" />

            <!-- Container do Cronômetro -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:gravity="center">

                <Chronometer
                    android:id="@+id/chronometer"
                    android:layout_width="140dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/cronometro_background"
                    android:elevation="8dp"
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="00:00"
                    android:textAlignment="center"
                    android:textSize="22sp" />
            </LinearLayout>

            <EditText
                android:id="@+id/dataInicio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Data Hora Início"
                android:padding="10dp"
                android:background="@drawable/edittext_background"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/dataFim"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Data Hora Fim"
                android:padding="10dp"
                android:background="@drawable/edittext_background"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Selecione o posto de trabalho:"
                android:textStyle="bold"
                android:paddingTop="10dp"
                android:textSize="16sp" />

            <Spinner
                android:id="@+id/spPost"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Selecione a máquina:"
                android:textStyle="bold"
                android:paddingTop="10dp"
                android:textSize="16sp" />

            <Spinner
                android:id="@+id/spMaq"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <!-- Lista de Operações -->
            <LinearLayout
                android:id="@+id/linear_op"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" />

            <!-- Campo de Observação -->
            <EditText
                android:id="@+id/obs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Observações"
                android:padding="10dp"
                android:background="@drawable/edittext_background"
                android:textSize="16sp" />

            <!-- Botões de Controle -->

            <Button
                android:id="@+id/btnProximo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:backgroundTint="@color/purple_500"
                android:padding="10dp"
                android:text="Próxima Operação"
                android:textColor="@android:color/white" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="3dp">

                <Button
                    android:id="@+id/btn_InitC"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="INICIAR"
                    android:backgroundTint="@color/teal_700"
                    android:textColor="@android:color/white"
                    android:padding="10dp" />

                <Button
                    android:id="@+id/btnParar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Parar"
                    android:backgroundTint="#FF0000"
                    android:textColor="@android:color/white"
                    android:padding="10dp"
                    android:layout_marginStart="10dp" />

                <Button
                    android:id="@+id/btnEnviar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ENVIAR"
                    android:backgroundTint="#0CC11E"
                    android:textColor="@android:color/white"
                    android:padding="10dp"
                    android:layout_marginStart="10dp" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>
