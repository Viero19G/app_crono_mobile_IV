<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".createOp">

    <EditText
        android:id="@+id/deesc_op"
        android:layout_width="309dp"
        android:layout_height="56dp"
        android:layout_marginTop="28dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Descrição"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nome_op" />

    <Button
        android:id="@+id/send_op"
        android:layout_width="166dp"
        android:layout_height="62dp"
        android:layout_marginTop="48dp"
        android:text="enviar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.869"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/deesc_op"
        app:layout_constraintVertical_bias="0.378"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/nome_op"
        android:layout_width="309dp"
        android:layout_height="74dp"
        android:layout_marginTop="40dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Nome da Operação"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Spinner
        android:id="@+id/spinnerOpIns"
        android:layout_width="305dp"
        android:layout_height="57dp"
        android:layout_marginTop="52dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/deesc_op" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="222dp"
        android:layout_height="26dp"
        android:layout_marginTop="24dp"
        android:text="SELECIONE A CLASSIFICAÇÃO:"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.296"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/deesc_op"
        app:textAllCaps="false" />
</androidx.constraintlayout.widget.ConstraintLayout>